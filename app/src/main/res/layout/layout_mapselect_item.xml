<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="13dp">
    <TextView
        android:id="@+id/old_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지번 주소"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    
    <TextView
        android:id="@+id/new_address_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도로명"
        android:textSize="13sp"
        android:padding="5dp"
        android:background="@drawable/normal_box_edge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/old_address"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <TextView
        android:id="@+id/new_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도로명 주소"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/new_address_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/old_address"
        android:layout_marginStart="5dp"/>

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:adjustViewBounds="true"
        android:src="@drawable/delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>