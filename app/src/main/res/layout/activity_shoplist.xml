<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/shoplist_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.Shoplist.ShoplistActivity">


    <FrameLayout
        android:id="@+id/shoplist_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/shoplist_toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:theme="@style/ToolbarTheme"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="#ffffff"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/shoplist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음식종류"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.Toolbar>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="110dp"
        android:background="#ffffff"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shoplist_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rouond_edge"
                android:layout_margin="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/reset"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초기화"
                    android:textColor="#A8744F" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shoplist_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rouond_edge"
                android:layout_margin="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기본순 "
                    android:textColor="#000000" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bottom_arrow"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shoplist_min_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rouond_edge"
                android:layout_margin="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최소주문금액 "
                    android:textColor="#000000" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bottom_arrow"
                    android:adjustViewBounds="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shoplist_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rouond_edge"
                android:layout_margin="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배달팁 "
                    android:textColor="#000000" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bottom_arrow"
                    android:adjustViewBounds="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shoplist_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rouond_edge"
                android:layout_margin="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별점 "
                    android:textColor="#000000" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bottom_arrow"
                    android:adjustViewBounds="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shop_list_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rouond_edge"
                android:layout_margin="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/filter"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타 "
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</FrameLayout>