<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.professionalandroid.apps.baemin_clone_android">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


    <application
        android:name=".src.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".src.splash.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity
            android:name=".src.Shoplist.ShoplistActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_shoplist"></activity>

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="6otyicnqxq" />

        <activity
            android:name=".src.login.LoginActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".src.main.MainActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>